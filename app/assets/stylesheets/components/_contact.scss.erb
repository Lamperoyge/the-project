.contact-container {
  background-image: linear-gradient(-86deg, rgba(0,0,0,0.4) 12%, rgba(2, 53, 87, 0.4) 85%), url('<%= asset_path("nasa.jpg") %>');
  // background-size: cover !important;
  // background: -webkit-linear-gradient(to right, #4b6cb7, #182848), url(''); /* Chrome 10-25, Safari 5.1-6 */
  // background: linear-gradient(to right, #4b6cb7, #182848); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
  // background: -webkit-linear-gradient(to right, #000000, #53346d); /* Chrome 10-25, Safari 5.1-6 */
  // background: linear-gradient(to right, #000000, #53346d); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
  // background-position: center;
  // background: #393e46;
  position:relative;
  height: 100vh;
  margin-right: 0px;
  margin-left: 0px;
  display: flex;
  justify-content: center;
  color: white;
  .row {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    margin: 0px;
  }
  h1 {
    margin-top: 15%;
    margin-bottom: 10%;
    color: white;
    -webkit-box-shadow: inset 0px 0px #D23333;
    box-shadow: inset 0px 0px #D23333;
    -webkit-box-shadow: inset 0px -18px #D23333;
    box-shadow: inset 0px -18px #D23333;
  }

  .contact-card {
    h1 {
    text-align: center;
    }
  }
}




.contact-info {
  background-image: url('<%= asset_path("stripe.png") %>');
  background-size: cover;
  background-position: center;
  transition: all 0.5s linear;
  opacity: 0;
  color: black;
  box-shadow: inset 3px 3px 6px -1px rgba(0,0,0,1);
  padding: 40px;
}

.email {
  font-size: 20px;
}

.phone {
  font-size: 20px;
}






