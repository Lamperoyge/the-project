.about-container {
  background-image: linear-gradient(-180deg, rgba(0,0,0, 0.0) 7%, rgba(0,0,0, 0.0) 38% ), url('<%= asset_path("about.jpg") %>');
  background-size: cover !important;
  background-position: center;
  position:relative;
  height: 100vh;
  margin-right: 0px;
  margin-left: 0px;
  display: flex;
  justify-content: center;
  color: white;
  .row {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    margin: 0px;
  }
  h1 {
    margin-top: 15%;
    margin-bottom: 10%;
    color: white;
    -webkit-box-shadow: inset 0px 0px #D23333;
    box-shadow: inset 0px 0px #D23333;
    -webkit-box-shadow: inset 0px -18px #D23333;
    box-shadow: inset 0px -18px #D23333;
  }

  .about-card-h1 {
    text-align: center;
  }



  .about-card {
    color: black;
    background-color: white;
    font-family: 'Playfair Display', serif;
    font-weight: lighter;
    padding: 10px;
  }
}
