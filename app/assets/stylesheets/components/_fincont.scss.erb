.container101 {
  background-image: linear-gradient(-180deg, rgba(0,0,0, 0.0) 7%, rgba(0,0,0, 0.0) 38% ), url('<%= asset_path("layers.png") %>');
  background-size: cover !important;
  background-position: center;
  height: 100vh;
  margin-right: 0px;
  margin-left: 0px;
  display: flex;
  justify-content: center;
  .row {
    margin: 0px !important;
    h3 {
      margin-top: 40px;
      font-family: 'Playfair Display', serif;
      .span {
        background: rgba(230, 14, 18, 0.8);
        padding: 5px;
        color: white;
      }
    }
  }
}


