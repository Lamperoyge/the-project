.show-container {
  margin-left: 20%;
  margin-right: 20%;
  background-color: white;
  box-shadow: 4px 4px 34px -10px rgba(0,0,0,0.75);
  display: flex;
  justify-content: center;
  flex-direction: column;
  text-align: center;
  h1 {
  margin-bottom: 15%;
  margin-top: 100px;
  }
}

#review_body {
  word-break: break-all;
}
#review_content {
  width: 100%;
  height: 100px;
}
.created-by {
  display: flex;
  justify-content: space-between;
}
#reviews {
  margin-left: 20%;
  margin-right: 20%;
  background-color: white;
  box-shadow: 4px 4px 34px -10px rgba(0,0,0,0.75);
  display: flex;
  justify-content: center;
  flex-direction: column;
  margin-top: 3vh;
  text-align: start;
  padding: 1%;
}

#new_review {
  display: flex;
  justify-content: center;
  text-align: center;
  margin-top: 5vh;
}
@media only screen and (max-device-width: 480px) {
  .show-container {
    margin: 0px;
    padding-top: 30px;
    background: linear-gradient(-180deg, rgba(255,255,255, 0.8) 70%, rgba(255,255,255, 0.8) 70% ), url('<%= asset_path("graph.png") %>');
    background-size: cover;
    background-position: center;
    h1 {
      padding: 20px;
      margin-bottom: 0px;
    }
  }
  .graph {
    height: 250px;
  }

  #reviews {
    margin: 0px;
  }

  #review_body {
    font-size: 12px;
  }

  #review_user {
    font-size: 12px;
  }
}


.wrapper {
  background-color: #E9E5E5;
  background: url('<%= asset_path("graph.png") %>');
  background-size: cover;
  background-position: center;
}


