<%= link_to post_path(p) do  %>
  <div class="col-xs-12 col-sm-4">
    <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path p.photo? ? p.photo : "iphonemockup.png", height: 300, width: 400, crop: :fill %>')">
      <div class="card-category"><%= p.category.name %>
      </div>
      <div class="card-description">
        <h2><%= p.title %></h2>
        <p><%= p.content %></p>
      </div>
      <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
    </div>
  </div>
<% end %>
